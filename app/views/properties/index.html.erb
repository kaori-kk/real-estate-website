<h3>Properties</h3>
  <div class="property-table">

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Price</th>
            <th>Rooms</th>
            <th>Bedrooms</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @properties.each do |property| %>
            <tr>
              <td><%= link_to property.name, property_path(property)%></td>
              <td><%= property.address %></td>
              <td><%= property.price %></td>
              <td><%= property.rooms %></td>
              <td><%= property.bedrooms %></td>
              <td><%= link_to 'Edit', edit_property_path(property), class: "btn btn-sm btn-secondary" %></td>
              <td><%= link_to 'Delete', property, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-secondary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <br>
    <%= link_to 'Add Property', new_property_path, class: "btn btn-primary" %>

</div>


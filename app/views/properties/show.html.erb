<div class="property-detail-page">
  <div class="heading-apt-show">
    <h3><%= @property.name %></h3>
    <p>address: <%= @property.address %></p>
  </div>
  <div class="center">
    <% @property.photos.each do |photo| %>
      <%= cl_image_tag photo.key, class: "property-photo"%>
    <% end %>
  </div>


  <div class="center-nav">
    <% @property.photos.each do |photo| %>
      <%= cl_image_tag photo.key, class: "property-photo-nav"%>
    <% end %>
  </div>
</div>

  <div class="property-info">
    <div class="apartment-info">
      <div class="details">
        <div class="detail1">
          <p>
            <%= @property.address %>
          </p>

          <h3>
            <strong class="apt-name"><%= @property.name %></strong>
          </h3>
        </div>

        <div class="detail2">
          <p>
            <strong>Price:</strong>
            <%= @property.price %>
          </p>

          <div class="apt-room">
            <p>
              <i class="fas fa-couch"></i>
              <%= @property.rooms %>
            </p>

            <p>
              <i class="fas fa-bed"></i>
              <%= @property.bedrooms %>
            </p>

            <p>
              <i class="fas fa-car"></i>
              <%= @property.parking %>
            </p>
          </div>
        </div>
      </div>



      <p>
        <strong>Description:</strong>
        <br><%= @property.description %>
      </p>

    </div>
    <div class="agent-info">
      <%= render "properties/agent_details" %>
    </div>
  </div>

    <%= link_to 'Edit', edit_property_path(@property), class: "btn btn-primary"%> |
    <%= link_to 'Back', properties_path, class: "btn btn-primary" %>


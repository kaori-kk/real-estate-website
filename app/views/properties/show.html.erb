<div class="property-detail-page">

  <%= cl_image_tag @property.photo.key, class: "property-photo"%>

  <p>
    <strong>Name:</strong>
    <%= @property.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @property.address %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @property.price %>
  </p>

  <p>
    <strong>Rooms:</strong>
    <%= @property.rooms %>
  </p>

  <p>
    <strong>Bedrooms:</strong>
    <%= @property.bedrooms %>
  </p>

    <%= link_to 'Edit', edit_property_path(@property), class: "btn btn-primary"%> |
    <%= link_to 'Back', properties_path, class: "btn btn-primary" %>
</div>
